<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>grade-table</title>
    <link rel="shortcut icon" type="image/icon" href="assets/images/title.jpg">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/style.css">
</head>

<body>
    <div class="container">
        <!-- nav bar -==========================================================-->
        <div class="navbar navbar-light bg-light navbar-expand-md">
            <!-- only show this element when the isnt on mobile -->
            <h1 class="hidden-xsd-none d-sm-block">Student Grade Table

                <small class="float-right">Grade Average :

                    <span class="avgGrade text-white-50 bg-dark">0</span>

                </small>

            </h1>
            <!-- only show this element when the user gets to a mobile version -->
            <h3 class="hidden-sm d-md-none d-block">Student Grade Table

                <small>Grade Average :

                    <span class="avgGrade">0</span>

                </small>

            </h3>
        </div>
        <!-- nav bar end-==========================================================->

        <!-form ============================================================== -->
        <div class="row col-xl-3 col-md-12 student-add-form float-right">
            <h4>Add Student</h4>
            <div class="form-group input-group">
                <span class="input-group-addon">

                    <span class="glyphicon glyphicon-user "></span>
                </span>
                <input type="text" class="form-control" name="studentName" id="studentName" placeholder="Student Name">
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon">

                    <span class="glyphicon glyphicon-list-alt"></span>
                </span>
                <input type="text" class="form-control" name="course" id="course" placeholder="Student Course">
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon">

                    <span class="glyphicon glyphicon-education"></span>
                </span>
                <input type="text" class="form-control" name="studentGrade" id="studentGrade" placeholder="Student Grade">
            </div>
            <div>
                <button type="button" id="add" class="btn btn-success" onclick="">Add</button>
                <button type="button" id="cancel" class="btn btn-warning active:focus," onclick="">Clear</button>
                <br>
            </div>
            <div class="getall">
                <button type="button" id="getServerData" class="btn btn-info mt-20" onclick="">Check all students</button>
                <!-- <button type="button" id='getServerData'
                    class="btn btn-info mt-20" onclick="getDB()">Get all student grade from Server</button> -->
            </div>
        </div>
        <!---form end==============================================================-->
        <!-- table below -->
        <div class=" row col-xl-9 col-md-12 student-list-container">
            <table class="table student-list">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Student Course</th>
                        <th>Student Grade</th>
                        <th>Operations</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- <tr>

                        <td>Eric.Johnson</td>

                        <td>Math </td>

                        <td>80</td>

                        <td>delete</td>

                    </tr> -->
                </tbody>
            </table>
        </div>
        <!-- table end=============================================================-->
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
    <script src="assets/js/script.js"></script>
</body>

</html>